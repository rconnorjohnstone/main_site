.article
  font-size: 1.3rem;

.date
  font-size: 1.25rem;
  color: Gray;
  margin: 0;
  line-height: 1.1;

a
  text-decoration: underline; !important

.blog_footer
  width: 30%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 auto;

#current
  position: relative;
  bottom: 0.5rem;

.blog_footer > a
  font-size: 2.5rem;

@media only screen and (orientation: portrait)
  .article
    .font-size: 0.9rem;

  .blog_footer
    width: 70%;

